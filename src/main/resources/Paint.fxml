<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane id="background" prefHeight="600" prefWidth="600" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="PaintController">

    <left>
            <ToolBar fx:id="toolBar" BorderPane.alignment="CENTER">
                <items>
                    <VBox prefHeight="342.0" prefWidth="60.0" styleClass="segmented-button-bar, vbox">
                       <children>
                           <Button>
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="21.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@arrow.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                           <Button onAction="#setPencil" prefHeight="20.0" prefWidth="22.0">
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="21.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@paint-brush.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                           <Button onAction="#setFillTool">
                     <graphic>
                        <ImageView fitHeight="24.0" fitWidth="21.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@paint-bucket.png" />
                           </image>
                        </ImageView>
                     </graphic></Button>
                           <Button text="-" />
                           <Button text="-" />
                           <Button text="-" />
                           <Button text="-" />
                           <Button text="-" />
                           <Button text="-" />
                           <Button onAction="#clearCanvas" text="Clear" />
                  <ColorPicker fx:id="colorPicker" prefHeight="25.0" prefWidth="49.0" />
                       </children>
                    </VBox>
                </items>
            </ToolBar>

    </left>
   <center>
      <ImageView fx:id="canvas" fitHeight="600.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </center>

    <top>
        <MenuBar fx:id="menuBar" styleClass="hud" stylesheets="Stylesheet.css">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem text="New" />
                        <MenuItem text="Open" />
                        <MenuItem text="Save" />
                        <MenuItem text="Save As" />
                        <SeparatorMenuItem />
                        <MenuItem text="Exit" />
                    </items>
                </Menu>
                <Menu text="Edit">
                    <items>
                        <MenuItem text="Copy" />
                        <MenuItem text="Cut" />
                        <MenuItem text="Paste" />
                    </items>
                </Menu>
                <Menu text="Help">
                    <items>
                        <MenuItem disable="true" text="Search" />
                        <MenuItem text="Online Manual" visible="false" />
                        <SeparatorMenuItem />
                        <MenuItem text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>

</BorderPane>
